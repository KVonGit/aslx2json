<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="aslx2json.Views.MainWindow"
        Width="800" Height="400"
        Title="aslx2json">
    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Styles>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BrowseXmlButton" Content="Select ASLX Input" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="XmlFileNameTextBlock" Margin="10,0,0,0" />
        </StackPanel>
        <TextBox x:Name="XmlPathBox" Width="200" Margin="0,10,0,0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BrowseJsonButton" Content="Select JSON Output" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="JsonFileNameTextBlock" Margin="10,0,0,0" />
        </StackPanel>
        <TextBox x:Name="JsonPathBox" Width="200" Margin="0,10,0,0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ConvertButton" Content="Convert" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="ConversionMessageTextBlock" Margin="10,0,0,0" />
        </StackPanel>
    </StackPanel>
</Window>
